{
  "$schema": "https://railway.app/railway.schema.json",
  "name": "agrotm-solana",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install --production"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "numReplicas": 1
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3001",
        "ALLOWED_ORIGINS": "https://agrotmsol.com.br,https://agrotm.vercel.app,https://agrotm-solana.vercel.app"
      }
    },
    "preview": {
      "variables": {
        "NODE_ENV": "development",
        "PORT": "3001",
        "ALLOWED_ORIGINS": "http://localhost:3000,https://agrotm-solana-git-preview.vercel.app"
      }
    }
  }
} 