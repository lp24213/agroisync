{
  "version": 2,
  "name": "agrotm-platform",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "functions": {
    "frontend/app/api/**/*.ts": {
      "maxDuration": 30
    },
    "backend/src/**/*.ts": {
      "maxDuration": 60
    }
  },
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_APP_NAME": "AGROTM",
    "NEXT_PUBLIC_APP_VERSION": "2.0.0"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/nfts",
      "destination": "/nft-marketplace",
      "permanent": true
    },
    {
      "source": "/old-dashboard",
      "destination": "/dashboard",
      "permanent": true
    },
    {
      "source": "/docs",
      "destination": "/documentation",
      "permanent": true
    },
    {
      "source": "/help",
      "destination": "/support",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/blockchain/:path*",
      "destination": "/api/blockchain/:path*"
    },
    {
      "source": "/api/auth/:path*",
      "destination": "/api/auth/:path*"
    },
    {
      "source": "/api/nft/:path*",
      "destination": "/api/nft/:path*"
    },
    {
      "source": "/api/staking/:path*",
      "destination": "/api/staking/:path*"
    },
    {
      "source": "/api/defi/:path*",
      "destination": "/api/defi/:path*"
    },
    {
      "source": "/api/analytics/:path*",
      "destination": "/api/analytics/:path*"
    },
    {
      "source": "/api/admin/:path*",
      "destination": "/api/admin/:path*"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "github": {
    "silent": true
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_APP_URL": "https://agrotm.com",
      "NEXT_PUBLIC_API_URL": "https://api.agrotm.com"
    }
  },
  "devCommand": "pnpm dev",
  "buildCommand": "pnpm build",
  "outputDirectory": "frontend/.next",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "regions": ["iad1", "sfo1"],
  "functions": {
    "frontend/app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    },
    "backend/src/**/*.ts": {
      "maxDuration": 60,
      "memory": 2048
    }
  },
  "crons": [
    {
      "path": "/api/cron/update-prices",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/process-staking-rewards",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/cleanup-expired-sessions",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/backup-database",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/send-notifications",
      "schedule": "*/15 * * * *"
    }
  ],
  "analytics": {
    "enabled": true
  },
  "speedInsights": {
    "enabled": true
  },
  "logging": {
    "enabled": true
  },
  "monitoring": {
    "enabled": true
  },
  "security": {
    "headers": {
      "X-Content-Type-Options": "nosniff",
      "X-Frame-Options": "DENY",
      "X-XSS-Protection": "1; mode=block",
      "Referrer-Policy": "strict-origin-when-cross-origin",
      "Permissions-Policy": "camera=(), microphone=(), geolocation=()",
      "Strict-Transport-Security": "max-age=31536000; includeSubDomains; preload"
    }
  },
  "edge": {
    "functions": {
      "frontend/app/api/edge/**/*.ts": {
        "maxDuration": 10
      }
    }
  },
  "experimental": {
    "appDir": true,
    "serverComponentsExternalPackages": ["@solana/web3.js"],
    "optimizePackageImports": [
      "lucide-react",
      "@radix-ui/react-icons",
      "framer-motion"
    ]
  }
} 