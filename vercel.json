{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/.next",
  "installCommand": "cd frontend && npm install",
  "framework": "nextjs",
  "builds": [
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "frontend/$1" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 