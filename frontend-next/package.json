{
  "name": "agroisync-next",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "next-sitemap": "^4.2.3",
    "@marsidev/react-turnstile": "^1.3.1",
    "resend": "^6.1.0"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.9.1",
    "@lhci/cli": "^0.13.0",
    "wait-on": "^7.2.0",
    "@cloudflare/next-on-pages": "^1.13.5",
    "wrangler": "^3.80.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "postbuild": "next-sitemap",
    "test:a11y": "axe http://localhost:3000 http://localhost:3000/sobre http://localhost:3000/contato http://localhost:3000/marketplace http://localhost:3000/fretes --exit 0",
    "ci:build": "next build",
    "ci:start": "next start",
    "ci:lhci": "wait-on http://localhost:3000 && lhci collect --config=./lighthouserc.json && lhci assert --config=./lighthouserc.json",
    "cf:build": "next build && next-sitemap && npx @cloudflare/next-on-pages",
    "cf:deploy": "wrangler pages deploy .vercel/output --project-name=agroisync"
  }
}
