{
  "name": "agrosync-backend",
  "version": "1.0.0",
  "description": "AgroSync Backend - API completa para agronegócio",
  "type": "module",
  "main": "src/handler.js",
  "scripts": {
    "start": "wrangler dev src/cloudflare-worker.js",
    "start:production": "NODE_ENV=production wrangler dev src/cloudflare-worker.js",
    "dev": "wrangler dev src/cloudflare-worker.js",
    "build": "echo 'Backend build completed - no compilation needed'",
    "build:worker": "echo 'Worker build completed'",
    "build:production": "echo 'Production build completed'",
    "deploy": "wrangler publish src/cloudflare-worker.js",
    "d1:init": "./init-d1-database.ps1",
    "d1:check": "wrangler d1 execute agroisync-db --file=./utils/check-db.sql",
    "d1:seed": "wrangler d1 execute agroisync-db --file=./schema.sql",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:ci": "CI=true jest --coverage --watchAll=false",
    "test:e2e": "node test/e2e.js",
    "test:e2e:ci": "CI=true node test/e2e.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/**/*.{js,json,md}",
    "format:check": "prettier --check src/**/*.{js,json,md}",
    "health-check": "curl -f http://localhost:3001/api/health || exit 1",
    "logs": "tail -f logs/app.log"
  },
  "keywords": [
    "agronegócio",
    "api",
    "nodejs",
    "express",
    "cloudflare",
    "blockchain",
    "stripe"
  ],
  "author": "AgroSync Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.58.0",
    "axios": "^1.6.0",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "openai": "^4.20.1",
    "qrcode": "^1.5.3",
    "resend": "^6.1.0",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.4",
    "speakeasy": "^2.0.0",
    "stripe": "^14.25.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "web3": "^4.3.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/eslint-parser": "^7.23.0",
    "@eslint/js": "^9.37.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
