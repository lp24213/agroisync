# AWS Amplify Environment Variables for AGROTM
# Copy this file and configure in AWS Amplify Console

# =============================================================================
# FRONTEND VARIABLES
# =============================================================================

# Next.js Configuration
NEXT_PUBLIC_APP_URL=https://your-app.amplifyapp.com
NEXT_PUBLIC_API_URL=https://your-backend.amplifyapp.com

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# CoinGecko API
NEXT_PUBLIC_COINGECKO_API_KEY=CG-BTkHrqswBAYJKoPMkqKSQLM4

# Moralis API (if used)
NEXT_PUBLIC_MORALIS_API_KEY=your_moralis_api_key

# Custom Keys
CUSTOM_KEY=your_custom_key

# =============================================================================
# BACKEND VARIABLES
# =============================================================================

# Server Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://your-app.amplifyapp.com

# Database Configuration
DATABASE_URL=your_database_url
DB_HOST=your_db_host
DB_PORT=5432
DB_NAME=agrotm_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Redis Configuration
REDIS_URL=your_redis_url
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h

# Email Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM=noreply@agrotm.com

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# =============================================================================
# AWS SPECIFIC VARIABLES
# =============================================================================

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# S3 Configuration (if using S3 for file storage)
S3_BUCKET_NAME=your_s3_bucket
S3_BUCKET_REGION=us-east-1

# CloudFront Distribution (if using CDN)
CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_id

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Monitoring
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
ENABLE_CHATBOT=true
ENABLE_CRYPTO_CHARTS=true
ENABLE_AUTHENTICATION=true
ENABLE_FILE_UPLOAD=true

# =============================================================================
# DEVELOPMENT VARIABLES (for local development)
# =============================================================================

# Local Development
LOCAL_API_URL=http://localhost:3001
LOCAL_FRONTEND_URL=http://localhost:3000
