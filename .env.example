# =============================================================================
# AGROTM SOLANA - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# =============================================================================
# SOLANA BLOCKCHAIN CONFIGURATION
# =============================================================================
# Network: devnet, testnet, mainnet-beta
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# Your deployed program ID (replace with actual after deployment)
PROGRAM_ID=11111111111111111111111111111111

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a strong secret key for JWT tokens
JWT_SECRET=your_super_secure_jwt_secret_key_change_in_production

# CORS origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# =============================================================================
# FIREBASE CONFIGURATION (Optional)
# =============================================================================
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
FIREBASE_APP_ID=your_firebase_app_id

# =============================================================================
# DATABASE CONFIGURATION (Optional)
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/agrotm
REDIS_URL=redis://localhost:6379

# =============================================================================
# EXTERNAL API KEYS (Optional)
# =============================================================================
# CoinGecko API for price data
COINGECKO_API_KEY=your_coingecko_api_key

# Chainlink API for oracle data
CHAINLINK_API_KEY=your_chainlink_api_key

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn

# Google Analytics
GA_TRACKING_ID=your_google_analytics_id

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# =============================================================================
# IPFS CONFIGURATION (Optional)
# =============================================================================
IPFS_GATEWAY=https://ipfs.io/ipfs/
IPFS_API_URL=https://api.pinata.cloud
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Set to true to enable debug mode
DEBUG=false

# Set to true to enable verbose logging
VERBOSE=false

NEXT_PUBLIC_API_URL=https://api.agrotm.io