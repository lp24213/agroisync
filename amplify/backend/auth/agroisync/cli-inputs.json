{
  "version": "1",
  "auth": {
    "resourceName": "agroisync",
    "serviceName": "Cognito",
    "defaultAuth": {
      "mode": "USER_SRP_AUTH",
      "cognitoConfig": {
        "signupMethod": "EMAIL",
        "signinMethod": "EMAIL",
        "signinAliases": ["EMAIL"],
        "userAttributes": ["EMAIL", "NAME"],
        "passwordPolicy": {
          "minimumLength": 12,
          "requireUppercase": true,
          "requireLowercase": true,
          "requireNumbers": true,
          "requireSymbols": true
        },
        "mfaConfiguration": "ON",
        "mfaTypes": ["SMS", "TOTP"],
        "verificationMechanisms": ["EMAIL"],
        "socialProviders": ["GOOGLE", "FACEBOOK", "APPLE"],
        "hostedUI": true,
        "redirectSignIn": "https://www.agroisync.com/",
        "redirectSignOut": "https://www.agroisync.com/",
        "allowUnauthenticatedIdentities": false
      }
    }
  }
}
