{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "components/**/*",
    "hooks/**/*",
    "middlewares/**/*",
    "pages/**/*",
    "services/**/*",
    "contexts/**/*",
    "contracts/**/*",
    "scripts/**/*",
    "types/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
