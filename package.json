{
  "name": "agrotm-solana",
  "version": "2.0.0",
  "description": "AGROTM - DeFi & NFT Platform for Agriculture",
  "private": true,
  "workspaces": [
    "frontend",
    "contracts"
  ],
  "scripts": {
    "dev": "pnpm --filter frontend dev",
    "build": "pnpm --filter frontend build",
    "start": "pnpm --filter frontend start",
    "test": "pnpm --filter frontend test",
    "test:watch": "pnpm --filter frontend test:watch",
    "test:coverage": "pnpm --filter frontend test:coverage",
    "test:e2e": "pnpm --filter frontend test:e2e",
    "lint": "pnpm --filter frontend lint",
    "lint:fix": "pnpm --filter frontend lint:fix",
    "format": "pnpm --filter frontend format",
    "format:check": "pnpm --filter frontend format:check",
    "type-check": "pnpm --filter frontend type-check",
    "clean": "pnpm -r exec rm -rf node_modules .next dist coverage && rm -rf node_modules .turbo",
    "install:all": "pnpm install",
    "security:audit": "pnpm audit --audit-level=moderate",
    "security:fix": "pnpm audit fix",
    "contracts:build": "pnpm --filter contracts build",
    "contracts:test": "pnpm --filter contracts test",
    "contracts:deploy": "pnpm --filter contracts deploy",
    "frontend:dev": "pnpm --filter frontend dev",
    "frontend:build": "pnpm --filter frontend build",
    "analyze": "pnpm --filter frontend analyze",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "postinstall": "husky install",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:seed": "pnpm --filter backend seed",
    "db:migrate": "pnpm --filter backend migrate",
    "monitoring:start": "docker-compose -f docker-compose.monitoring.yml up -d",
    "monitoring:stop": "docker-compose -f docker-compose.monitoring.yml down"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "wait-on": "^7.2.0",
    "start-server-and-test": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "msw": "^2.0.8",
    "whatwg-fetch": "^3.6.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/agrotm-solana.git"
  },
  "keywords": [
    "solana",
    "defi",
    "agriculture",
    "blockchain",
    "staking",
    "nft",
    "web3",
    "ethereum",
    "anchor",
    "nextjs",
    "typescript",
    "monorepo"
  ],
  "author": "AGROTM Team <team@agrotm.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/agrotm-solana/issues"
  },
  "homepage": "https://agrotm.com",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@8.0.0"
}
