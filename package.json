{
  "name": "agrotm-sol",
  "version": "1.0.0",
  "description": "AGROTM - Revolutionary DeFi & NFT Platform for Agriculture",
  "private": true,
  "scripts": {
    "build": "cd frontend && pnpm build",
    "start": "cd frontend && pnpm start",
    "lint": "cd frontend && pnpm lint",
    "lint:fix": "cd frontend && pnpm lint:fix",
    "test": "cd frontend && pnpm test",
    "test:watch": "cd frontend && pnpm test:watch",
    "test:coverage": "cd frontend && pnpm test:coverage",
    "type-check": "cd frontend && pnpm type-check",
    "format": "cd frontend && pnpm format",
    "format:check": "cd frontend && pnpm format:check",
    "dev": "cd frontend && pnpm dev",
    "clean": "cd frontend && pnpm clean",
    "preinstall": "echo 'Preinstall completed'",
    "postinstall": "echo 'Postinstall completed'",
    "audit:contracts": "slither contracts/ethereum/contracts/ --json > security/slither-report.json || true",
    "coverage:contracts": "npx hardhat coverage --network hardhat",
    "docker:prune": "docker system prune -af --volumes"
  },
  "devDependencies": {
    "turbo": "^1.13.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
