{
  "name": "agrotm-solana",
  "version": "1.0.0",
  "description": "Agrotm Solana DeFi Platform - Complete DeFi ecosystem on Solana blockchain",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "contracts",
    "api",
    "staking",
    "defi-dashboard"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:api": "cd api && npm run dev",
    "dev:staking": "cd staking && npm run dev",
    "dev:dashboard": "cd defi-dashboard && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:api": "cd api && npm run build",
    "build:staking": "cd staking && npm run build",
    "build:dashboard": "cd defi-dashboard && npm run build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm run start",
    "start:backend": "cd backend && npm run start",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm run install:frontend && npm run install:backend && npm run install:api && npm run install:staking && npm run install:dashboard",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:api": "cd api && npm install",
    "install:staking": "cd staking && npm install",
    "install:dashboard": "cd defi-dashboard && npm install",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:backend",
    "lint:fix:frontend": "cd frontend && npm run lint:fix",
    "lint:fix:backend": "cd backend && npm run lint:fix",
    "type-check": "npm run type-check:frontend && npm run type-check:backend",
    "type-check:frontend": "cd frontend && npm run type-check",
    "type-check:backend": "cd backend && npm run type-check",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd frontend && rm -rf .next dist node_modules",
    "clean:backend": "cd backend && rm -rf dist node_modules",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "solana",
    "defi",
    "blockchain",
    "staking",
    "yield-farming",
    "liquidity-pools",
    "nft",
    "web3",
    "typescript",
    "nextjs",
    "react",
    "nodejs",
    "express"
  ],
  "author": "Agrotm Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/agrotm/agrotm-solana.git"
  },
  "bugs": {
    "url": "https://github.com/agrotm/agrotm-solana/issues"
  },
  "homepage": "https://github.com/agrotm/agrotm-solana#readme",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
