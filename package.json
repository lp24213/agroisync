{
  "name": "agroisync-monorepo",
  "private": true,
  "engines": { 
    "node": ">=20" 
  },
  "workspaces": [ 
    "frontend", 
    "backend" 
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter ./frontend dev",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
