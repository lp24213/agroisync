# ===== CONFIGURAÇÕES BÁSICAS =====
NODE_ENV=development
PORT=3001
HOST=localhost

# ===== CLOUDFLARE D1 DATABASE =====
# Usando Cloudflare D1 como banco principal
# MONGODB_URI=mongodb://localhost:27017/agroisync (DEPRECATED - usar D1)
# MONGODB_URI_PRODUCTION=mongodb+srv://username:password@cluster.mongodb.net/agroisync (DEPRECATED - usar D1)

# ===== JWT =====
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_REFRESH_EXPIRES_IN=30d

# ===== AWS COGNITO =====
AWS_REGION=us-east-1
AWS_USER_POOLS_ID=us-east-1_xxxxxxxxx
AWS_USER_POOLS_WEB_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_IDENTITY_POOL_ID=us-east-1:xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ===== STRIPE =====
# OBRIGATÓRIO: Configure com suas chaves REAIS do Stripe
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxx

# ===== STRIPE PRICE IDs (OBRIGATÓRIO) =====
STRIPE_STORE_BASIC_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_STORE_PRO_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_STORE_ENTERPRISE_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_AGROCONECTA_BASIC_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_AGROCONECTA_PRO_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxx

# ===== REDIS (OPCIONAL) =====
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ===== EMAIL =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@agroisync.com

# ===== SMS (TWILIO) =====
TWILIO_ACCOUNT_SID=ACe505b5ec08f28194cc48089843d7ab9f
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ===== LOGS =====
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ===== SENTRY =====
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===== NEW RELIC =====
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=AGROSYNC

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== SECURITY =====
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=http://localhost:3000

# ===== APIS EXTERNAS =====

# OpenWeather (Clima)
OPENWEATHER_API_KEY=your-openweather-api-key-here

# Receita Federal (Validação de documentos)
RECEITA_FEDERAL_API_URL=https://api.receita.fazenda.gov.br
RECEITA_FEDERAL_API_KEY=your-receita-federal-api-key-here

# IBGE (Dados geográficos)
IBGE_API_URL=https://servicodados.ibge.gov.br/api/v1

# ViaCEP (Consulta de CEP)
VIACEP_API_URL=https://viacep.com.br/ws

# ===== UPLOAD =====
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=uploads/

# ===== METAMASK =====
METAMASK_PRIVATE_KEY=your-metamask-private-key
ETHEREUM_NETWORK=mainnet
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id

# ===== SOLANA =====
SOLANA_NETWORK=mainnet-beta
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_PRIVATE_KEY=your-solana-private-key

# ===== MONITORING =====
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ===== CACHE =====
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# ===== BACKUP =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/

# ===== NOTIFICATIONS =====
PUSH_NOTIFICATIONS_ENABLED=true
PUSH_PRIVATE_KEY=your-push-private-key
PUSH_PUBLIC_KEY=your-push-public-key

# ===== ANALYTICS =====
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# ===== FEATURES =====
FEATURE_FLAGS_ENABLED=true
FEATURE_NEW_UI=false
FEATURE_BETA_FEATURES=false

# ===== TESTING =====
TEST_DATABASE_URL=mongodb://localhost:27017/agroisync-test
TEST_STRIPE_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxx
