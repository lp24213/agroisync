# ===== CONFIGURAÇÕES BÁSICAS =====
NODE_ENV=development
PORT=3001
HOST=localhost

# ===== CLOUDFLARE D1 DATABASE =====
# Usando Cloudflare D1 como banco principal
CLOUDFLARE_D1_DATABASE_ID=your-d1-database-id

# ===== CLOUDFLARE TURNSTILE =====
CLOUDFLARE_TURNSTILE_SITE_KEY=your-turnstile-site-key
CLOUDFLARE_TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# ===== JWT =====
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_REFRESH_EXPIRES_IN=30d

# ===== EMAIL (RESEND) =====
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxx
RESEND_FROM=AgroSync <noreply@agroisync.com>

# ===== LOGS =====
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== SECURITY =====
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=http://localhost:3000

# ===== APIS EXTERNAS =====
# OpenWeather (Clima)
OPENWEATHER_API_KEY=your-openweather-api-key-here

# IBGE (Dados geográficos)
IBGE_API_URL=https://servicodados.ibge.gov.br/api/v1

# ViaCEP (Consulta de CEP)
VIACEP_API_URL=https://viacep.com.br/ws

# ===== UPLOAD =====
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=uploads/

# ===== CACHE =====
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# ===== FEATURES =====
FEATURE_FLAGS_ENABLED=true
FEATURE_NEW_UI=false
FEATURE_BETA_FEATURES=false