# ===== CONFIGURAÇÕES DO SERVIDOR =====
PORT=5000
NODE_ENV=development

# ===== CONFIGURAÇÕES DO BANCO DE DADOS =====
# MongoDB URI (IBM Cloud MongoDB ou MongoDB Atlas)
MONGODB_URI=mongodb://localhost:27017/agrosync

# ===== CONFIGURAÇÕES JWT =====
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# ===== CONFIGURAÇÕES DE EMAIL (SMTP) =====
# Configurações SMTP genéricas (Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@agrosync.com
FROM_NAME=AgroSync

# ===== CONFIGURAÇÕES SMS (TWILIO) =====
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===== CONFIGURAÇÕES DE PAGAMENTO (STRIPE) =====
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ===== CONFIGURAÇÕES WEB3/BLOCKCHAIN =====
WEB3_PROVIDER=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
PRIVATE_KEY=your-private-key
CONTRACT_ADDRESS=your-contract-address

# ===== CONFIGURAÇÕES DE UPLOAD (CLOUDINARY) =====
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ===== CONFIGURAÇÕES REDIS (IBM Cloud Redis) =====
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# ===== CONFIGURAÇÕES DE SEGURANÇA =====
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== CONFIGURAÇÕES DE LOGGING =====
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ===== CONFIGURAÇÕES DE MONITORAMENTO =====
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# ===== CONFIGURAÇÕES DO FRONTEND =====
FRONTEND_URL=http://localhost:3000

# ===== CONFIGURAÇÕES DE FEATURES =====
ENABLE_CHAT=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_PWA=true
ENABLE_2FA=true
ENABLE_BLOCKCHAIN=true

# ===== CONFIGURAÇÕES DE TIMEOUT =====
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
CACHE_DURATION=300000

# ===== CONFIGURAÇÕES DE SESSÃO =====
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# ===== CONFIGURAÇÕES DE UPLOAD =====
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===== CONFIGURAÇÕES DE VALIDAÇÃO =====
PASSWORD_MIN_LENGTH=8
USERNAME_MIN_LENGTH=3

# ===== CONFIGURAÇÕES DE LIMPEZA =====
CLEANUP_INTERVAL=3600000
TOKEN_CLEANUP_AGE=86400000

# ===== CONFIGURAÇÕES ESPECÍFICAS DO IBM CLOUD =====
# IBM Cloud App ID (se usando)
IBM_APP_ID_CLIENT_ID=your-ibm-app-id-client-id
IBM_APP_ID_CLIENT_SECRET=your-ibm-app-id-client-secret
IBM_APP_ID_DISCOVERY_ENDPOINT=https://us-south.appid.cloud.ibm.com/oauth/v4/your-tenant-id/.well-known/openid_configuration

# IBM Cloud Object Storage (se usando)
IBM_COS_ENDPOINT=https://s3.us-south.cloud-object-storage.appdomain.cloud
IBM_COS_API_KEY_ID=your-ibm-cos-api-key-id
IBM_COS_INSTANCE_CRN=your-ibm-cos-instance-crn
IBM_COS_BUCKET_NAME=your-bucket-name

# IBM Cloud Database (se usando PostgreSQL)
IBM_DB_HOST=your-ibm-db-host
IBM_DB_PORT=5432
IBM_DB_NAME=your-ibm-db-name
IBM_DB_USER=your-ibm-db-user
IBM_DB_PASSWORD=your-ibm-db-password

# IBM Cloud Functions (se usando)
IBM_FUNCTIONS_API_KEY=your-ibm-functions-api-key
IBM_FUNCTIONS_NAMESPACE=your-ibm-functions-namespace
IBM_FUNCTIONS_REGION=us-south
