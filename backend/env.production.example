# =============================================================================
# AGROTM SOLANA - PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.production and fill in your production values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3001
API_VERSION=v1
APP_NAME=AGROTM
APP_VERSION=2.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb+srv://<USERNAME>:<PASSWORD>@cluster.mongodb.net/agrotm
REDIS_URL=redis://<USERNAME>:<PASSWORD>@redis-server:6379

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=CHANGEME-USE-STRONG-SECRET-MIN-32-CHARS
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# =============================================================================
# SOLANA BLOCKCHAIN CONFIGURATION
# =============================================================================
SOLANA_NETWORK=mainnet
SOLANA_MAINNET_RPC=https://api.mainnet-beta.solana.com
SOLANA_DEVNET_RPC=https://api.devnet.solana.com
SOLANA_TESTNET_RPC=https://api.testnet.solana.com

# =============================================================================
# CONTRACT ADDRESSES
# =============================================================================
AGROTM_TOKEN_ADDRESS=your-agrotm-token-address
STAKING_CONTRACT_ADDRESS=your-staking-contract-address
LIQUIDITY_POOL_ADDRESS=your-liquidity-pool-address
NFT_CONTRACT_ADDRESS=your-nft-contract-address

# =============================================================================
# DEPLOYMENT & CI/CD
# =============================================================================
# Somente AWS (Amplify/ECS/ECR)
RAILWAY_SERVICE=agrotm-backend

# =============================================================================
# EXTERNAL APIs & SERVICES
# =============================================================================
COINGECKO_API_KEY=your-coingecko-api-key
WEATHER_API_KEY=your-weather-api-key
PRICE_FEED_API_KEY=your-price-feed-api-key

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=<YOUR_EMAIL>
SMTP_PASS=<YOUR_EMAIL_PASSWORD>
EMAIL_FROM=noreply@agrotm.com
EMAIL_REPLY_TO=support@agrotm.com

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# CORS & SECURITY
# =============================================================================
ALLOWED_ORIGINS=https://agrotm.com,https://www.agrotm.com
CORS_CREDENTIALS=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
WEB3_RATE_LIMIT_MAX_REQUESTS=10

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
REDIS_CACHE_PREFIX=agrotm:

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=warn
LOG_FILE_PATH=logs/app.log
LOG_ERROR_FILE_PATH=logs/error.log

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/
COMPRESSION_LEVEL=6
BODY_PARSER_LIMIT=10mb

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_NFT_MINTING=true
ENABLE_STAKING=true
ENABLE_DEFI=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# =============================================================================
# WEB3 WALLET CONFIGURATION
# =============================================================================
WALLET_CONNECT_PROJECT_ID=your-wallet-connect-project-id
WALLET_CONNECT_RELAY_URL=wss://relay.walletconnect.com

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================
DISCORD_WEBHOOK_URL=your-discord-webhook-url
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# =============================================================================
# BACKUP & STORAGE
# =============================================================================
AWS_ACCESS_KEY_ID=<YOUR_AWS_ACCESS_KEY>
AWS_SECRET_ACCESS_KEY=<YOUR_AWS_SECRET_KEY>
AWS_REGION=us-east-1
AWS_S3_BUCKET=agrotm-backups
AWS_S3_BUCKET_PUBLIC=agrotm-public

# =============================================================================
# PRODUCTION SPECIFIC
# =============================================================================
ENABLE_SWAGGER=false
ENABLE_GRAPHQL_PLAYGROUND=false
DEBUG=false 