{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "numReplicas": 1
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3001",
        "JWT_SECRET": "{{JWT_SECRET}}",
        "DB_HOST": "{{DB_HOST}}",
        "DB_PORT": "{{DB_PORT}}",
        "DB_NAME": "{{DB_NAME}}",
        "DB_USER": "{{DB_USER}}",
        "DB_PASSWORD": "{{DB_PASSWORD}}",
        "REDIS_URL": "{{REDIS_URL}}",
        "CORS_ORIGIN": "https://agrotm-solana.vercel.app,https://agrotm.sol",
        "LOG_LEVEL": "info"
      }
    },
    "staging": {
      "variables": {
        "NODE_ENV": "staging",
        "PORT": "3001",
        "JWT_SECRET": "{{JWT_SECRET}}",
        "DB_HOST": "{{DB_HOST}}",
        "DB_PORT": "{{DB_PORT}}",
        "DB_NAME": "{{DB_NAME}}",
        "DB_USER": "{{DB_USER}}",
        "DB_PASSWORD": "{{DB_PASSWORD}}",
        "REDIS_URL": "{{REDIS_URL}}",
        "CORS_ORIGIN": "https://agrotm-solana.vercel.app,https://agrotm.sol,http://localhost:3000",
        "LOG_LEVEL": "debug"
      }
    }
  }
}
