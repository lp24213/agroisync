{
  "name": "agrotm-solana-backend",
  "version": "2.0.0",
  "description": "Backend API for Agrotm Solana DeFi platform",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=__tests__/.*\\.test\\.ts",
    "test:integration": "jest --testPathPattern=__tests__/.*\\.integration\\.test\\.ts",
    "test:e2e": "jest --testPathPattern=__tests__/.*\\.e2e\\.test\\.ts",
    "test:coverage": "jest --coverage",
    "test:performance": "node scripts/performance-test.js",
    "test:load": "node scripts/load-test.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset-db.js",
    "docker:build": "docker build -t agrotm-backend .",
    "docker:run": "docker run -p 3001:3001 agrotm-backend",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "docs:generate": "swagger-jsdoc -d swaggerDef.js -o swagger.json",
    "docs:serve": "swagger-ui-serve swagger.json"
  },
  "keywords": [
    "solana",
    "defi",
    "blockchain",
    "api",
    "typescript",
    "express"
  ],
  "author": "Agrotm Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.1.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "mongoose": "^8.0.3",
    "redis": "^4.6.11",
    "@solana/web3.js": "^1.90.0",
    "@solana/spl-token": "^0.4.0",
    "axios": "^1.6.0",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "cron": "^3.1.6",
    "uuid": "^9.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "express-validator": "^7.0.1",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "typescript": "^5.3.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "mongodb-memory-server": "^9.1.3",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agrotm/agrotm-solana.git"
  },
  "bugs": {
    "url": "https://github.com/agrotm/agrotm-solana/issues"
  },
  "homepage": "https://agrotm.com"
} 