<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Dark" parent="Theme.Material3.Dark">
        <!-- Cores principais -->
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Cores secundárias -->
        <item name="colorSecondary">@color/colorSecondaryLight</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <!-- Cores de superfície -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_dark</item>

        <!-- Cores de erro -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/black</item>

        <!-- Configurações do sistema -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>