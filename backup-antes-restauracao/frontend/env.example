# =============================================================
# AGROISYNC FRONTEND • Variáveis de Ambiente
# =============================================================
# COPIE ESTE ARQUIVO PARA .env E CONFIGURE COM SEUS VALORES REAIS
# NUNCA COMMITE O ARQUIVO .env NO GIT!

# ===== API CONFIGURATION =====
VITE_API_URL=https://agroisync.com/api
VITE_API_VERSION=v1

# ===== CLOUDFLARE TURNSTILE (CAPTCHA) =====
VITE_TURNSTILE_SITE_KEY=1x00000000000000000000AA

# ===== FEATURES =====
VITE_ENABLE_MARKETPLACE=true
VITE_ENABLE_REALTIME_CHAT=true
VITE_ENABLE_BLOCKCHAIN=false

# ===== UPLOAD (CLOUDINARY) =====
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
VITE_CLOUDINARY_API_KEY=your_cloudinary_api_key

# ===== BLOCKCHAIN (DISABLED) =====
VITE_WEB3_PROVIDER=https://mainnet.infura.io/v3/your_project_id
VITE_CONTRACT_ADDRESS=0x_your_contract_address

# ===== ANALYTICS =====
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_POSTHOG_TOKEN=your-posthog-token
VITE_SENTRY_DSN=your-sentry-dsn
REACT_APP_ENABLE_METAMASK=true
REACT_APP_ENABLE_WEBSOCKET=true
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_PWA=true

# ===== DEVELOPMENT =====
REACT_APP_DEBUG=false
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRY_ATTEMPTS=3
REACT_APP_CACHE_DURATION=300000

# =============================================================
# INSTRUÇÕES DE SEGURANÇA:
# =============================================================
# 1. NUNCA commite este arquivo com valores reais
# 2. Apenas use chaves PÚBLICAS no frontend (pk_, site_key, etc)
# 3. NUNCA exponha chaves secretas (sk_, secret_key, etc) no frontend
# 4. Use HTTPS em produção
# 5. Configure CORS adequadamente
# =============================================================