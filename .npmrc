# AGROISYNC - NPM Configuration
# =============================

# Suppress deprecation warnings during builds
ignore-deprecation=true

# Suppress funding messages
fund=false

# Suppress audit messages during install
audit=false

# Use legacy peer deps to avoid conflicts
legacy-peer-deps=true

# Set registry to npmjs
registry=https://registry.npmjs.org/

# Increase timeout for slow connections
timeout=60000

# Set maxsockets for better performance
maxsockets=50

# Enable progress bar
progress=true

# Save exact versions
save-exact=false

# Use package-lock.json
package-lock=true
