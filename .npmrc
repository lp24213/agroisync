# Use exact versions for better reproducibility
save-exact=true

# Use legacy peer deps for better compatibility
legacy-peer-deps=true

# Enable audit
audit=true

# Set registry
registry=https://registry.npmjs.org/

# Disable engine strict mode for Vercel compatibility
engine-strict=false

# Auto install peer dependencies
auto-install-peers=true

# Ignore specific vulnerabilities that are in transitive dependencies
audit-level=moderate
