# NPM Configuration
registry=https://registry.npmjs.org/

# Save exact version
save-exact=true

# Package lock
package-lock=true

# Audit
audit=true
fund=false

# Scripts
ignore-scripts=false

# Security
ignore-engines=false

# Cache
cache=.npm-cache

# Logs
loglevel=warn

# Progress
progress=false

# Color
color=true

# Git
git-checks=true

# Workspace
workspaces-update=false

# Legacy peer deps
legacy-peer-deps=false

# Strict SSL
strict-ssl=true

# Timeout
timeout=300000

# Retry
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000 