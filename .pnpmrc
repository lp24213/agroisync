# Use exact versions for better reproducibility
save-exact=true

# Use legacy peer deps for better compatibility
legacy-peer-deps=true

# Enable audit
audit=true

# Set registry
registry=https://registry.npmjs.org/

# Enable store
store-dir=.pnpm-store

# Set engine strict mode
engine-strict=true

# Auto install peers
auto-install-peers=true

# Shamefully hoist
shamefully-hoist=true 