{
  "version": "1.0",
  "framework": "react",
  "build": {
    "command": "npm run build",
    "output": "build",
    "baseDirectory": "build"
  },
  "routes": [
    {
      "source": "/*",
      "target": "/index.html",
      "status": "200"
    }
  ],
  "headers": [
    {
      "source": "**/*",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
