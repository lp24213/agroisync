{
  "name": "AgroSync - Hub Completo do Agronegócio",
  "short_name": "AgroSync",
  "description": "Marketplace de produtos agrícolas, sistema de fretes AgroConecta, análise de criptomoedas e notícias do agronegócio",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#000000",
  "theme_color": "#00ffbf",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "pt-BR",
  "dir": "ltr",
  "categories": ["business", "productivity", "shopping"],
  "icons": [
