rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Usuários podem fazer upload de seus próprios arquivos
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Arquivos públicos podem ser lidos por todos
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Arquivos de NFTs podem ser lidos por todos
    match /nfts/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Arquivos de propriedades podem ser lidos por todos
    match /properties/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Arquivos de relatórios
    match /reports/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Arquivos de documentos
    match /documents/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Arquivos de imagens de perfil
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Arquivos de uploads gerais
    match /uploads/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
