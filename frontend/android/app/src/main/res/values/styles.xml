<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <!-- Cores principais -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryLight</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/gray900</item>

        <!-- Cores secundárias -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryLight</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/gray900</item>

        <!-- Cores de superfície -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_light</item>

        <!-- Cores de erro -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Material You - Dynamic Colors -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        
        <!-- Configurações do sistema -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Elevação e Sombras -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>

        <!-- Tipografia -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.AgroiSync.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.AgroiSync.HeadlineMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.AgroiSync.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.AgroiSync.BodyMedium</item>

        <!-- Formas -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.AgroiSync.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.AgroiSync.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.AgroiSync.LargeComponent</item>
    </style>

    <!-- Tema sem barra de ação - Moderno e Acessível -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Acessibilidade -->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary_light</item>

        <!-- Remove qualquer splash screen nativa -->
        <item name="android:windowDisablePreview">true</item>

        <!-- Bordas arredondadas para melhor aparência (removido por compatibilidade) -->
        <!-- <item name="android:windowCornerRadius">12dp</item> -->

        <!-- Tema escuro automático baseado no sistema -->
        <item name="android:forceDarkAllowed">true</item>
    </style>

    <!-- Estilos de texto -->
    <style name="TextAppearance.AgroiSync.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">@dimen/text_xxl</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.AgroiSync.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/text_xl</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.AgroiSync.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_md</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="TextAppearance.AgroiSync.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_sm</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Estilos de formas -->
    <style name="ShapeAppearance.AgroiSync.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_sm</item>
    </style>

    <style name="ShapeAppearance.AgroiSync.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_md</item>
    </style>

    <style name="ShapeAppearance.AgroiSync.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_lg</item>
    </style>

</resources>