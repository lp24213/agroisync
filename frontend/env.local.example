# API Configuration
REACT_APP_API_URL=http://localhost:3001/api

# Environment
REACT_APP_ENV=development

# Features
REACT_APP_ENABLE_MONGODB=true
REACT_APP_ENABLE_STRIPE=true
REACT_APP_ENABLE_METAMASK=true

# MongoDB Connection (Backend)
MONGODB_URI=mongodb://localhost:27017/agroisync

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret

# Metamask Configuration
METAMASK_NETWORK_ID=1
METAMASK_CONTRACT_ADDRESS=your_contract_address

# Weather API
WEATHER_API_KEY=your_weather_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Commodity Quotes API
COMMODITY_API_KEY=your_commodity_api_key
COMMODITY_API_URL=https://api.commodity.com

# Crypto Quotes API
CRYPTO_API_KEY=your_crypto_api_key
CRYPTO_API_URL=https://api.coingecko.com/api/v3
