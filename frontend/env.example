# =============================================================
# AGROISYNC FRONTEND • Variáveis de Ambiente
# =============================================================
# COPIE ESTE ARQUIVO PARA .env E CONFIGURE COM SEUS VALORES REAIS
# NUNCA COMMITE O ARQUIVO .env NO GIT!

# ===== API CONFIGURATION =====
REACT_APP_API_URL=https://agroisync.com/api
REACT_APP_WS_URL=wss://agroisync.com

# ===== STRIPE PAYMENTS =====
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# ===== CLOUDFLARE TURNSTILE (CAPTCHA) =====
REACT_APP_CLOUDFLARE_TURNSTILE_SITE_KEY=your_turnstile_site_key_here

# ===== UPLOAD (CLOUDINARY) =====
REACT_APP_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
REACT_APP_CLOUDINARY_API_KEY=your_cloudinary_api_key

# ===== BLOCKCHAIN =====
REACT_APP_WEB3_PROVIDER=https://mainnet.infura.io/v3/your_project_id
REACT_APP_CONTRACT_ADDRESS=0x_your_contract_address

# ===== ANALYTICS =====
REACT_APP_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# ===== FEATURES =====
REACT_APP_ENABLE_STRIPE=true
REACT_APP_ENABLE_METAMASK=true
REACT_APP_ENABLE_WEBSOCKET=true
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_PWA=true

# ===== DEVELOPMENT =====
REACT_APP_DEBUG=false
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRY_ATTEMPTS=3
REACT_APP_CACHE_DURATION=300000

# =============================================================
# INSTRUÇÕES DE SEGURANÇA:
# =============================================================
# 1. NUNCA commite este arquivo com valores reais
# 2. Apenas use chaves PÚBLICAS no frontend (pk_, site_key, etc)
# 3. NUNCA exponha chaves secretas (sk_, secret_key, etc) no frontend
# 4. Use HTTPS em produção
# 5. Configure CORS adequadamente
# =============================================================