# AGROISYNC Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# Application
NEXT_PUBLIC_APP_NAME=AGROISYNC
NEXT_PUBLIC_APP_VERSION=2.3.1
NEXT_PUBLIC_APP_URL=https://agroisync.com
NEXT_PUBLIC_API_URL=https://api.agroisync.com

# Next.js
NODE_ENV=production
NEXT_PUBLIC_VERCEL_URL=
NEXT_TELEMETRY_DISABLED=1

# Authentication
NEXTAUTH_URL=https://agroisync.com
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL_INTERNAL=http://localhost:3000

# Database
DATABASE_URL=your_database_url_here

# AWS
NEXT_PUBLIC_AWS_REGION=us-east-1
NEXT_PUBLIC_AWS_S3_BUCKET=agroisync-uploads

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Blockchain
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
NEXT_PUBLIC_ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_project_id
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-rpc.com

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_BLOCKCHAIN=true
NEXT_PUBLIC_ENABLE_PAYMENTS=true

# Development
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_LOG_LEVEL=info