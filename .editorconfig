# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Frontend files
[frontend/**/*.{js,jsx,ts,tsx,css,scss,json}]
indent_size = 2

# Backend files
[backend/**/*.{js,ts,json}]
indent_size = 2

# Configuration files
[*.{json,yml,yaml,md}]
indent_size = 2

# Package files
[package.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# PowerShell scripts
[*.ps1]
indent_size = 2
end_of_line = crlf

# Docker files
[Dockerfile*]
indent_size = 4

# Nginx configuration
[nginx.conf]
indent_size = 2 